<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:background="@drawable/backgroundresize"
    android:padding="12dp"
    >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/test_rel"
    android:layout_marginLeft="24dp"
    android:layout_marginRight="24dp"
    android:layout_marginTop="4dp">
    <TextView
        android:id="@+id/surprise"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:text="@string/like_surprises"
        android:textColor="@color/text_color_black"
        android:textSize="20sp"
        android:gravity="center_horizontal"/>

    <TextView
        android:id="@+id/send_you"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/surprise"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:text="@string/we_send_only_good_ones"
        android:textColor="@color/text_color_black"
        android:textSize="16dp"
        android:gravity="center_horizontal"/>
</RelativeLayout>

    <RelativeLayout
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/test_rel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@drawable/round_corner_product"
        android:padding="@dimen/margin_4dp">

        <ImageView
            android:id="@+id/rectangle"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_action_rectangle_white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/rectangle"

            android:text="@string/add_your_birth_day"

            android:textColor="@color/white"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="4dp"
        android:layout_marginTop="16dp"
        android:gravity="center_horizontal"
        android:text="@string/dismiss"
        android:textColor="@color/dismiss_text_color"
        android:textSize="16dp" android:id="@+id/dismiss_text"/>
    <!--<ImageView
        android:layout_below="@+id/dismiss_text"
        android:id="@+id/dismiss_bottom"
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:visibility="visible"
        android:background="@drawable/list_divider_shadow"/>-->
    </RelativeLayout>

