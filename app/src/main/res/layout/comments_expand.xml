<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <com.test.vue.vuetest.uihelper.CircularImageView
            android:id="@+id/commenter_profile_pic"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:src="@drawable/vuetest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commenter_name_id"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="Lupito Nyong's" />

            <TextView
                android:id="@+id/comment_id"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:lines="2"
                android:text="Love love love the dress! Simple and fabulous!" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="6dp"
        android:orientation="horizontal">

        <com.test.vue.vuetest.uihelper.CircularImageView
            android:id="@+id/commenter_profile_pict"
            android:layout_width="52dp"
            android:layout_height="48dp"
            android:src="@drawable/vuetest" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/margin_2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/commenter_name_idt"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:ellipsize="end"
                android:singleLine="true"
                android:textColor="@color/black"
                android:text="Lupito Nyong's" />

            <TextView
                android:id="@+id/comment_idt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:ellipsize="end"
                android:textColor="@color/black"
                android:lines="2"
                android:text="Love love love the dress! Simple and fabulous!" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
