<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/action_bar_background"
    android:layout_gravity="center_horizontal">

    <ImageView
        android:id="@+id/setting_iv"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="12dp"
        android:src="@drawable/ic_action_settings"

        />

    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="@dimen/vue_icon_touch_area_dimensions"
        android:layout_centerInParent="true">

        <TextView
            android:id="@+id/my_feed_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="My Feed"
            android:textColor="#28aad4"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="28dp"

            android:layout_toRightOf="@+id/my_feed_text_id"
            android:background="@drawable/ic_action_up"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"/>
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="@dimen/vue_icon_touch_area_dimensions"
        android:layout_height="@dimen/vue_icon_touch_area_dimensions"
        android:layout_alignParentRight="true"


        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/my_selector">

        <ImageView
            android:layout_width="@dimen/vue_icon_dimensions"
            android:layout_height="@dimen/vue_icon_dimensions"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_action_message" />

        <TextView
            android:layout_width="@dimen/message_notification_text_size"
            android:layout_height="@dimen/message_notification_text_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_corners"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>