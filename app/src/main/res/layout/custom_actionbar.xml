<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:background="@drawable/action_bar_background"
    android:layout_gravity="center_horizontal">
  <RelativeLayout
      android:id="@+id/setting_lay_id"
      android:layout_width="@dimen/vue_icon_touch_area_dimensions"
      android:layout_height="@dimen/vue_icon_touch_area_dimensions"
      android:layout_alignParentLeft="true"
      android:layout_centerVertical="true"
      android:background="@drawable/my_selector"
      android:layout_marginLeft="8dp">
    <ImageView
        android:id="@+id/setting_id"
        android:layout_centerInParent="true"
        android:layout_width="@dimen/vue_icon_dimensions"
        android:layout_height="@dimen/vue_icon_dimensions"

        android:src="@drawable/ic_action_settings"

        />
  </RelativeLayout>
    <RelativeLayout

        android:layout_width="wrap_content"
        android:layout_height="@dimen/vue_icon_touch_area_dimensions"
        android:layout_centerInParent="true"
        android:id="@+id/feed_touch_layout">

        <TextView
            android:id="@+id/my_feed_text_id"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="My Feed"
            android:textColor="#28aad4"
            android:textSize="18sp"
            />

        <ImageView
            android:layout_width="36dp"
            android:layout_height="28dp"

            android:layout_alignParentTop="true"
            android:layout_marginTop="4dp"

            android:layout_toRightOf="@+id/my_feed_text_id"

            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:id="@+id/myfeed_action_icon"/>
    </RelativeLayout>


    <RelativeLayout

        android:layout_width="@dimen/vue_icon_touch_area_dimensions"
        android:layout_height="@dimen/vue_icon_touch_area_dimensions"
        android:layout_alignParentRight="true"

        android:id="@+id/message_center_touch"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dp"
        android:background="@drawable/my_selector">

        <ImageView
            android:layout_width="@dimen/vue_icon_dimensions"
            android:layout_height="@dimen/vue_icon_dimensions"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"

            android:src="@drawable/ic_action_message" />

        <TextView
            android:layout_width="@dimen/message_notification_text_size"
            android:layout_height="@dimen/message_notification_text_size"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:background="@drawable/round_corners"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/white" />
    </RelativeLayout>

</RelativeLayout>